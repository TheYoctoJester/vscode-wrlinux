{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "SDKROOT": "${config:wrlinuxsdk.sdkroot}",
            "SDKTARGETSYSROOT": "${config:wrlinuxsdk.sdktargetsysroot}",
            "PATH": "${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/../${config:wrlinuxsdk.hosttriplet}/bin:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/${config:wrlinuxsdk.targetarchtriplet}:${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/bin/${config:wrlinuxsdk.targetarchtriplet}-musl:${env:PATH}",
            "PKG_CONFIG_SYSROOT_DIR": "${config:wrlinuxsdk.sdktargetsysroot}",
            "PKG_CONFIG_PATH": "${config:wrlinuxsdk.sdktargetsysroot}/usr/lib/pkgconfig:${config:wrlinuxsdk.sdktargetsysroot}/usr/share/pkgconfig",
            "CONFIG_SITE": "${config:wrlinuxsdk.sdkroot}/site-config-${config:wrlinuxsdk.targettriplet}",
            "OECORE_NATIVE_SYSROOT": "${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}",
            "OECORE_TARGET_SYSROOT": "${config:wrlinuxsdk.sdktargetsysroot}",
            "OECORE_ACLOCAL_OPTS": "-I ${config:wrlinuxsdk.sdkroot}/sysroots/${config:wrlinuxsdk.hosttriplet}/usr/share/aclocal",
            "OECORE_BASELIB": "lib",
            "OECORE_TARGET_ARCH": "aarch64",
            "OECORE_TARGET_OS": "linux",
            "CC": "aarch64-wrs-linux-gcc  -mcpu=cortex-a72+crc+crypto -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CXX": "aarch64-wrs-linux-g++  -mcpu=cortex-a72+crc+crypto -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CPP": "aarch64-wrs-linux-gcc -E  -mcpu=cortex-a72+crc+crypto -fstack-protector-strong  -D_FORTIFY_SOURCE=2 -Wformat -Wformat-security -Werror=format-security --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "AS": "aarch64-wrs-linux-as  ",
            "LD": "aarch64-wrs-linux-ld  --sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "GDB": "aarch64-wrs-linux-gdb",
            "STRIP": "aarch64-wrs-linux-strip",
            "RANLIB": "aarch64-wrs-linux-ranlib",
            "OBJCOPY": "aarch64-wrs-linux-objcopy",
            "OBJDUMP": "aarch64-wrs-linux-objdump",
            "AR": "aarch64-wrs-linux-ar",
            "NM": "aarch64-wrs-linux-nm",
            "M4": "m4",
            "TARGET_PREFIX": "aarch64-wrs-linux-",
            "CONFIGURE_FLAGS": "--target=aarch64-wrs-linux --host=aarch64-wrs-linux --build=x86_64-linux --with-libtool-sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "CFLAGS": " -O2 -pipe -g -feliminate-unused-debug-types ",
            "CXXFLAGS": " -O2 -pipe -g -feliminate-unused-debug-types ",
            "LDFLAGS": "-Wl,-O1 -Wl,--hash-style=gnu -Wl,--as-needed -Wl,-z,relro,-z,now",
            "CPPFLAGS": "",
            "KCFLAGS": "--sysroot=${config:wrlinuxsdk.sdktargetsysroot}",
            "OECORE_DISTRO_VERSION": "${config:wrlinuxsdk.distroversion}",
            "OECORE_SDK_VERSION": "${wrlinuxsdk.sdkversion}",
            "ARCH": "arm64",
            "CROSS_COMPILE": "aarch64-wrs-linux-"
        }
    },
    "tasks": [
        {
            "label": "Print Environment Variables",
            "type": "shell",
            "command": "printenv",
            "args": [
            ],
            "problemMatcher": [
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK GCC C Compiler",
            "type": "shell",
            "command": "$CC",
            "args": [
                "-g",
                "${CFLAGS}",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK Make",
            "type": "shell",
            "command": "make",
            "args": [
                ""
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "WRLinux SDK Make Target...",
            "type": "shell",
            "command": "make",
            "args": [
                "${input:maketarget}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            }            
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "windows": {
                // Not tested
                "command": "start -FilePath 'qemu-system-aarch64' -ArgumentList '-S -gdb tcp::1234 -boot d -cdrom bin/myos.iso -m 512'"
            },
            "linux": {
                "command": "qemu-system-aarch64 -machine virt -cpu cortex-a57 -device virtio-net-device,netdev=net0 -netdev user,id=net0,hostfwd=tcp::1234-:1234 -m 512 -bios ${workspaceFolder}/qemu-u-boot-bcm-2xxx-rpi4.bin -nographic -drive id=disk0,file=${workspaceFolder}/bcm-2xxx-rpi4.img,if=none,format=raw -device virtio-blk-device,drive=disk0"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
          "id": "maketarget",
          "type": "promptString",
          "description": "Make target.",
          "default": "all"
        }
    ]
}
